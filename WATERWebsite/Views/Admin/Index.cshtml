@model WATERWebsite.Core.ViewModels.AdminIndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<button type="button" style="margin:120px;" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ProjectModal">Add Project</button>
<div class="modal fade" id="ProjectModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Project</h5>
            </div>
            <div class="modal-body">
                <div id="rs-checkout" class="rs-checkout">
                    <div class="container">
                        <div class="full-grid">
                            <form  enctype="multipart/form-data" id="ProjectForm">
                                <div class="billing-fields">
                                    <div class="form-content-box">
                                        <div class="row mb-30">
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectNameE" name="ProjectNameE">Project Name (EN): <span style="color:red;">*</span></label>
                                                    <input id="ProjectNameE" name="ProjectNameE" class="form-control-mod" type="text" placeholder="Project Name in English">
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectNameA" name="ProjectNameA">Project Name (AR): <span style="color:red;">*</span></label>
                                                    <input id="ProjectNameA" name="ProjectNameA" class="form-control-mod" type="text" placeholder="Project Name in English">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-30">
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectLocationE" name="ProjectLocationE">Project Location (EN): </label>
                                                    <input id="ProjectLocationE" name="ProjectLocationE" class="form-control-mod" placeholder="Project Location in English">
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectLocationA" name="ProjectLocationA">Project Location (AR): </label>
                                                    <input id="ProjectLocationA" name="ProjectLocationA" class="form-control-mod" placeholder="Project Location in Arabic">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-30">
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectOwnerE" name="ProjectOwnerE">Project Owner (EN): </label>
                                                    <input id="ProjectOwnerE" name="ProjectOwnerE" class="form-control-mod" placeholder="Project Owner in English">
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectOwnerA" name="ProjectOwnerA">Project Owner (AR): </label>
                                                    <input id="ProjectOwnerA" name="ProjectOwnerA" class="form-control-mod" placeholder="Project Owner in Arabic">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-30">
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectOperatorE" name="ProjectOperatorE">Project Operator (EN): </label>
                                                    <input id="ProjectOperatorE" name="ProjectOperatorE" class="form-control-mod" placeholder="Project Operator in English">
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectOperatorA" name="ProjectOperatorA">Project Operator (AR): </label>
                                                    <input id="ProjectOperatorA" name="ProjectOperatorA" class="form-control-mod" placeholder="Project Operator in Arabic">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-30">
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectDeveloperE" name="ProjectDeveloperE">Project Developer (EN): </label>
                                                    <input id="ProjectDeveloperE" name="ProjectDeveloperE" class="form-control-mod" placeholder="Project Developer in English">
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectDeveloperA" name="ProjectDeveloperA">Project Developer (AR): </label>
                                                    <input id="ProjectDeveloperA" name="ProjectDeveloperA" class="form-control-mod" placeholder="Project Developer in Arabic">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-30">
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectOverviewE" name="ProjectOverviewE">Project Overview (EN): </label>
                                                    <textarea id="ProjectOverviewE" name="ProjectOverviewE" class="form-control-mod" placeholder="Explain This Project"></textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectOverviewA" name="ProjectOverviewA">Project Overview (AR): </label>
                                                    <textarea id="ProjectOverviewA" name="ProjectOverviewA" class="form-control-mod" placeholder="Explain This Project"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-30">
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectDate" name="ProjectDate">Project Date: </label>
                                                    <input id="ProjectDate" name="ProjectDate" type="date" class="form-control-mod">
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label id="ProjectCapacity" name="ProjectCapacity">Project Capacity: </label>
                                                    <input id="ProjectCapacity" name="ProjectCapacity" type="number" class="form-control-mod" placeholder="M/3">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-30">
                                            <div class="input-group">
                                                <input type="file" class="form-control" id="Photo" name="Photo">
                                                <label class="input-group-text" id="Photo" name="Photo">Upload Project Photo</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-primary" id="AddProject">Add Project</button>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<button type="button" style="margin:120px;" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ServiceModal">Add Service</button>

<!-- Scripts -->
<script src="~/assets/js/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $('#ServiceModal').on('shown.bs.modal', function () {
        $('#ServiceModal').trigger('focus')
    });

    $('#AddProject').click(function (event) {
        debugger;
        event.preventDefault();
        $('#AddProject').hide();
        $.ajax({
            type: 'Post',
            url: '/Admin/CreateProject',
            data: $('#ProjectForm').serialize(),
            success: function (res) {
                if (res.success) {
                    swal({
                        type: 'success',
                        showCancelButton: true,
                        confirmButtonColor: '#0CC27E',
                        confirmButtonClass: 'btn btn-success btn-raised mr-5',
                        cancelButtonClass: 'btn btn-danger btn-raised',
                        confirmButtonText: 'Ok',
                        cancelButtonText: 'Back',
                        buttonsStyling: false
                    }).then(function () {
                        location.reload()
                    }, function (dismiss) {
                        location.href = "/Admin/Index"
                    })

                } else {
                    $('#AddProject').show()
                    swal("Error!", "errMessage", "error");
                }
            },
            error: function (err) {
                swal("Error!", err, "error");
                console.log(err)
            }
        })
    });


</script>