                    }, function (dismiss) {
                        location.href = "/Admin/Index"
                    })
                } else {
                    swal.fire("Error!", "errMessage", "error");
                    $('#AddSpecific').show()
                }
            },
            error: function (err) {
                swal.fire("Error!", err, "error");
                $('#AddSpecific').show()
                console.log(err)
            }
        })
    });


