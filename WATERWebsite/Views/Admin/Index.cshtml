    $('#ServiceModal').on('shown.bs.modal', function () {
        $('#ServiceModal').trigger('focus')
    });

    $('#AddProject').click(function (event) {
        debugger;
        event.preventDefault();
        $('#AddProject').hide();
        $.ajax({
            type: 'Post',
            url: '/Admin/CreateProject',
            data: $('#ProjectForm').serialize(),
            success: function (res) {
                if (res.success) {
                    Swal({
                        type: 'success',
                        showCancelButton: true,
                        confirmButtonColor: '#0CC27E',
                        confirmButtonClass: 'btn btn-success btn-raised mr-5',
                        cancelButtonClass: 'btn btn-danger btn-raised',
                        confirmButtonText: 'Ok',
                        cancelButtonText: 'Back',
                        buttonsStyling: false
                    }).then(function () {
                        location.reload()
                    }, function (dismiss) {
                        location.href = "/Admin/Index"
                    })

                } else {
                    $('#AddProject').show()
                    Swal("Error!", "errMessage", "error");
                }
            },
            error: function (err) {
                Swal("Error!", err, "error");
                console.log(err)
            }
        })
    });

    $('#AddServiceDetail').click(function (event) {
        debugger;
        event.preventDefault();
        let nameE = $('#ServiceDetailNameE').val();
        let nameA = $('#ServiceDetailNameA').val();
        let briefE = $('#ServiceDetailBriefE').val();
        let briefA = $('#ServiceDetailBriefA').val();
        let endE = $('#ServiceDetailEndE').val();
        let endA = $('#ServiceDetailEndA').val();
        let overviewE = tinymce.get("ServiceDetailOverviewE").getContent();
        let overviewA = tinymce.get("ServiceDetailOverviewA").getContent();
        $('#AddServiceDetail').hide();
        $.ajax({
            type: 'Post',
            url: '/Admin/CreateServiceDetail',
            data: {
                ServiceDetailNameE: nameE,
                ServiceDetailNameA: nameA,
                ServiceDetailBriefE: briefE,
                ServiceDetailBriefA: briefA,
                ServiceDetailEndE: endE,
                ServiceDetailEndA: endA,
                ServiceDetailOverviewE: overviewE,
                ServiceDetailOverviewA: overviewA
            },
            success: function (res) {
                if (res.success) {
                    swal.fire('Saved Successfully').then(function () {
                        location.reload()
                    }, function (dismiss) {
                        location.href = "/Admin/Index"
                    })
                } else {
