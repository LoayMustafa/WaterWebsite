                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label name="ServiceDetailEndE">Service Detail End (EN): <span style="color:red;">*</span></label>
                                                    <input id="ServiceDetailEndE" name="ServiceDetailEndE" class="form-control-mod" type="text" placeholder="Service Detail End in English">
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <label name="ServiceDetailEndA">Service Detail End (AR): <span style="color:red;">*</span></label>
                                                    <input id="ServiceDetailEndA" name="ServiceDetailEndA" class="form-control-mod" type="text" placeholder="Service Detail End in English">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-primary" id="AddServiceDetail">Add Service Detail</button>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

