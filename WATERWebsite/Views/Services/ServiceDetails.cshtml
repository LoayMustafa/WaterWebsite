@model WATERWebsite.Core.ViewModels.ServiceDetailsViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var ser = 0;
}

<!-- Breadcrumbs Start -->
<div class="rs-breadcrumbs img2">
    <div class="container">
        <div class="breadcrumbs-inner">
            <h1 class="page-title">
                @Model.ServiceName
            </h1>
            <span class="sub-text">
                Excepteur sint occaecat cupidatat non proident, sunt in coulpa qui official<br>
                modeserunt mollit anim id est 20 years experience.
            </span>
            <ul class="breadcrumbs-area">
                <li title="Go to konstruk">
                    <a class="active" href="index.html">Home</a>
                </li>
                <li>Services Style 1</li>
            </ul>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Services Single Start -->
<div class="rs-services-single pt-120 pb-120 md-pt-80 md-pb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 md-mb-50">
                <div class="services-img mb-35">
                    <img src="~/assets/images/services/services-single/ser1.jpg" alt="">
                </div>
                <div class="services-title pb-24">
                    <h2 class="title">We Ensure Best Service</h2>
                </div>
                <p class="desc-part pb-24">
                    @Model.ServiceBrief
                </p>
                <ul class="check-lists3">
                    @if (Model.SpecializedService != null)
                    {
                        @foreach (var ss in Model.SpecializedService)
                        {
                            <li>@ss.SpecializedServiceNameE</li>
                        }
                    }
                </ul>
                
                <p class="desc-part pb-50">
                    @Model.ServiceOverview
                </p>
                <!-- Faq Section Start -->
                <div class="rs-faq faq-style1 faq-modify1 pt-120 pb-100 md-pt-80 md-pb-60">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 md-mb-50">
                                <div class="faq-content">
                                    <div id="accordion" class="accordion">
                                        @if (Model.SpecializedService != null)
                                        {
                                            @foreach (var ss in Model.SpecializedService)
                                            {
                                                <div class="card">
                                                    <div class="card-header">
                                                        <a class="card-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false">@ss.SpecializedServiceNameA</a>
                                                    </div>
                                                    <div id="collapseTwo" class="collapse" data-bs-parent="#accordion" style="">
                                                        <div class="card-body">
                                                            @ss.SpecializedServiceBriefE
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Faq Section End -->
                <div class="row mb-60 md-mb-30">
                    <div class="col-lg-6 col-md-6 sm-mb-30">
                        <img class="bdru-4" src="~/assets/images/services/services-single/ser3.jpg" alt="">
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <img class="bdru-4" src="~/assets/images/services/services-single/ser4.jpg" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-4 pl-36 md-pl-15">
                <ul class="services-list mb-50">
                    @if (Model.Services != null)
                    {
                        @foreach (var service in Model.Services)
                        {
                            <li><a href="general-construction.html">@service.ServiceNameE</a></li>
                        }
                    }
                </ul>
                <div class="services-add mb-50">
                    <div class="services-overlay"></div>
                    <div class="address-wrap-item mb-20">
                        <div class="icon-part mb-37">
                            <i class="fa fa-phone"></i>
                        </div>
                        <h2 class="title">Have any Questions? Call us <span>Today!</span></h2>
                        <div class="divider">
                            <span class="divider-separator"></span>
                        </div>
                        <div class="contact">
                            <a href="tel:123222-8888">(123) 222-8888</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Services Single End -->
<script>
    $('#show.bs.collapse').on('hidden.bs.collapse', function () {
        $('#collapseThree').hide();
    })
</script>
