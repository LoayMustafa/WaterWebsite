}

<!-- Breadcrumbs Start -->
<div class="rs-breadcrumbs img3">
    <div class="container">
        <div class="breadcrumbs-inner">
            <h1 class="page-title">
                @Model.ServiceName
            </h1>
            <span class="sub-text">
            </span>
            <ul class="breadcrumbs-area">
                <li title="Home">
                    <a class="active" asp-action="Index">@DbRes.T("Services", "Resources", lang)</a>
                </li>
                <li>@Model.ServiceName</li>
            </ul>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
