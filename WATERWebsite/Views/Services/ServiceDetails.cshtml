            <div class="col-lg-4 pl-36 md-pl-15">
                <ul class="services-list mb-50">
                    @if (Model.Services != null)
                    {
                        @foreach (var service in Model.Services)
                        {
                            if (lang == "ar")
                            {
                                <li><a asp-action="ServiceDetails" asp-route-ServiceCode="@service.ServiceCode">@service.ServiceNameA</a></li>
                            }
                            else {
                                <li><a asp-action="ServiceDetails" asp-route-ServiceCode="@service.ServiceCode">@service.ServiceNameE</a></li>

