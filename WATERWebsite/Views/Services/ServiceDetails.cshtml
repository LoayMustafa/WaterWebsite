@using Westwind.Globalization;

@model WATERWebsite.Core.ViewModels.ServiceDetailsViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //var ser = 0;
    var lang = "en";
    if (Context.Session.GetString("lang") != null)
    {
        lang = Context.Session.GetString("lang");
    }
}

<!-- Breadcrumbs Start -->
<div class="rs-breadcrumbs img3">
    <div class="container">
        <div class="breadcrumbs-inner">
            <h1 class="page-title">
                @Model.ServiceName
            </h1>
            <span class="sub-text">
            </span>
            <ul class="breadcrumbs-area">
                <li title="Home">
                    <a class="active" asp-action="Index">@DbRes.T("Services", "Resources", lang)</a>
                </li>
                <li>@Model.ServiceName</li>
            </ul>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Services Single Start -->
<div class="rs-services-single pt-120 pb-120 md-pt-80 md-pb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 md-mb-50">
                <div class="services-img mb-35">
                    <img src="@Model.ServicePhotoPath" alt="">
                </div>
                <div class="services-title pb-24">
                </div>
                <p class="desc-part pb-24">
                    @Model.ServiceBrief
                </p>
                <ul class="check-lists3">
                    @*@if (Model.SpecializedService != null)
                    {
                    @foreach (var ss in Model.SpecializedService)
                    {
                    <li>@ss.SpecializedServiceNameE</li>
                    }
                    }*@
                </ul>

                <p class="desc-part pb-10">
                    @Model.ServiceOverview
                </p>
                <!-- Faq Section Start -->
                @if (Model.ServiceDetails?.Count > 0)
                {
                    @foreach (var serviceDetail in Model.ServiceDetails)
                    {
                        <div class="rs-inner-blog pt-30 pb-20 md-pt-80 md-pb-20">
                            <div class="container">
                                <div class="row">
                                    <div class="widget-area">
                                        <div class="categories mb-50">
                                            <div class="widget-title mb-15">
                                                <h3 class="title">@Model.ServiceName - @DbRes.T("Services", "Resources", lang) -</h3>
                                            </div>
                                            <ul>
                                                <li>
                                                    <a data-bs-toggle="modal" data-bs-target="#s_@serviceDetail.ServiceDetailCode" @*asp-action="ServiceDetailItem" asp-route-ServiceDetailCode="@serviceDetail.ServiceDetailCode"*@>
                                                        @serviceDetail.ServiceDetailName
                                                    </a>
                                                    <p class="service-brief-txt">
                                                        @serviceDetail.ServiceDetailBrief
                                                    </p>
                                                </li>
                                                <div id="s_@serviceDetail.ServiceDetailCode" class="modal fade" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-xl" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">@serviceDetail.ServiceDetailName</h5>
                                                                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div id="rs-checkout" class="rs-checkout">
                                                                    <div class="container">
                                                                        <div class="full-grid">
                                                                            <p>@serviceDetail.ServiceDetailBrief</p>
                                                                            <br>
                                                                            @if (serviceDetail.ServiceDetailOverview != "" || serviceDetail.ServiceDetailOverview != null)
                                                                            {
                                                                                <h3> Service Overview</h3>
                                                                                <p>@Html.Raw(serviceDetail.ServiceDetailOverview)</p>
                                                                                <br>
                                                                            }
                                                                            <p>@serviceDetail.ServiceDetailEnd</p>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                <p class="desc-part pb-10">
                    @Model.ServiceEnd
                </p>
            </div>
            <div class="col-lg-4 pl-36 md-pl-15">
                <div class="services-add mb-50">
                    <div class="services-overlay"></div>
                    <div class="address-wrap-item mb-20">
                        <div class="icon-part mb-37">
                            <i class="fa fa-phone"></i>
                        </div>
                        <h2 class="title">@DbRes.T("HaveAnyUpcomingProject", "Resources", lang) @DbRes.T("CallUs", "Resources", lang) <span>@DbRes.T("Today", "Resources", lang)!</span></h2>
                        <div class="divider">
                            <span class="divider-separator"></span>
                        </div>
                        <div class="contact">
                            <a href="tel:01000327035">01000327035</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Services Single End -->
