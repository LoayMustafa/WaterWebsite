@model WATERWebsite.Core.ViewModels.JobViewModels.JobActionViewModel
<form action="AddJob" method="post" class="needs-validation" novalidate>
    <input asp-for="JobCode" hidden />
    <div class="row">
        <div class="col-lg-6">
            <label asp-for="JobNameE" class="col-form-label">Job Name English:</label>
            <input asp-for="JobNameE" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Please insert a Job Name English.
            </div>
        </div>
        <div class="col-lg-6">
            <label asp-for="JobNameA" class="col-form-label">Job Name Arabic:</label>
            <input asp-for="JobNameA" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Please insert a Job Name Arabic.
            </div>
        </div>
    </div>
    <div class="mb-3">
        <div class="row">
            <div class="col-lg-12">
                <label asp-for="JobDescriptionE" class="col-form-label">Job Description English:</label>
                <textarea asp-for="JobDescriptionE" class="ckeditor-classic"></textarea>
            </div>
            <div class="col-lg-12">
                <label asp-for="JobDescriptionA" class="col-form-label">Job Description Arabic:</label>
                <textarea asp-for="JobDescriptionA" class="ckeditor-classic-JobDescriptionA"></textarea>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <div class="form-check form-switch form-switch-lg" dir="ltr">
        <input type="hidden" name="IsAvailable" value="false"> <!-- Hidden input for false value -->
        <input type="checkbox" class="form-check-input" name="IsAvailable" id="customSwitchsizelg" value="true" @(Model.IsAvailable ? "checked" : "")>
        <label class="form-check-label" for="customSwitchsizelg">Is Available</label>
    </div>
    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Back</button>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
<script>
    $(document).ready(function () {
        ClassicEditor
            .create(document.querySelector('.ckeditor-classic'))
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('.ckeditor-classic-JobDescriptionA'))
            .catch(error => {
                console.error(error);
            });
        var checkbox = $('#customSwitchsizelg');
        var hiddenInput = $('input[name="IsAvailable"]');
        hiddenInput.val(checkbox.is(':checked').toString());
        checkbox.on('change', function () {
            hiddenInput.val(checkbox.is(':checked').toString());
        });
    });


</script>
